<%= form_for receipt do |f| %>
  <%= f.submit %>
  <div class="row">
    <div class="col-md-6">
      <h3>Receipt Details</h3>
      <div class="form-group">
        <%= f.label :vendor %>
        <%= f.text_field :vendor, class: 'form-control', placeholder: 'Receipt Vendor', 'aria-describedby' => 'receiptVendorHelp' %>
        <small id="receiptVendorHelp" class="form-text text-muted">Enter the Store Name</small>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 4, class: 'form-control', placeholder: 'Purchase Description', 'aria-describedby' => 'receiptDescriptionHelp' %>
        <small id="receiptDescriptionHelp" class="form-text text-muted">Enter the reason for this purchase.</small>
      </div>
      <div class="form-group">
        <%= f.label :tax %>
        <%= f.number_field :tax, min: 0, rows: 4, class: 'form-control', placeholder: 'Sales Tax', 'aria-describedby' => 'receiptTaxHelp' %>
        <small id="receiptTaxHelp" class="form-text text-muted">Enter the tax spent on this purchase.</small>
      </div>
      <div class="form-group">
        <%= f.label :hardcopy, class: 'custom-file' do %>
        <%= f.file_field :hardcopy, class: 'custom-file-input', 'aria-describedby' => 'receiptHardcopyHelp' %>
        <span class="custom-file-control"></span>
        <% end %>
        <small id="receiptHardcopyHelp" class="form-text text-muted">Enter the tax spent on this purchase.</small>
      </div>
    </div>
    <div class="col-md-6">
      <h3>Receipt Items</h3>
      <%= render partial: 'item_form', locals: {form: f, item: :items} %>
    </div>
</div>
<% end %>
